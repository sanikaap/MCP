# ContentFlow AI - Environment Configuration

OPENROUTER_API_KEY=your_openrouter_key_here

# DATABASE CONFIGURATION

# Database file path (SQLite)
# Default: contentflow.db in current directory
DATABASE_PATH=contentflow.db

# Database backup path (optional)
DATABASE_BACKUP_PATH=backups/

# APPLICATION SETTINGS

# Debug mode (set to True for development)
# Shows detailed error messages and logs
DEBUG=False

# Maximum results per research source
# Lower = faster, Higher = more comprehensive
MAX_RESEARCH_RESULTS=5

# Default AI model to use
# Options: google/gemini-2.0-flash-exp:free, qwen/qwen-2.5-72b-instruct:free
AI_MODEL=google/gemini-2.0-flash-exp:free

# Content generation temperature (0.0 - 1.0)
# Lower = more focused, Higher = more creative
AI_TEMPERATURE=0.7

# Maximum tokens for AI responses
MAX_TOKENS=2500


# IMAGE GENERATION SETTINGS


# Image generation service
# Options: pollinations, huggingface
IMAGE_SERVICE=pollinations

# Default image dimensions
IMAGE_WIDTH=1024
IMAGE_HEIGHT=1024

# Image style
# Options: modern, professional, artistic, minimalist
IMAGE_STYLE=modern

# RATE LIMITING

# Requests per minute for research
RESEARCH_RATE_LIMIT=10

# Requests per minute for content generation
CONTENT_RATE_LIMIT=5


# GRADIO INTERFACE SETTINGS


# Server host (0.0.0.0 allows external access)
SERVER_HOST=0.0.0.0

# Server port
SERVER_PORT=7860

# Share publicly via Gradio link
# Set to True to get a public URL (tunneled through Gradio)
GRADIO_SHARE=False

# Enable queue for multiple users
GRADIO_ENABLE_QUEUE=True

# EXPORT SETTINGS

# Default export format
# Options: json, csv, markdown, notion
DEFAULT_EXPORT_FORMAT=json

# Export directory
EXPORT_DIR=exports/

# Include images in export
EXPORT_INCLUDE_IMAGES=True

# ANALYTICS SETTINGS

# Minimum data points for analytics
MIN_ANALYTICS_DATA=5

# Performance score threshold for warnings
PERFORMANCE_THRESHOLD=60

# PLATFORM-SPECIFIC SETTINGS

# Twitter/X
TWITTER_MAX_LENGTH=280
TWITTER_THREAD_MAX_TWEETS=10

# LinkedIn
LINKEDIN_MAX_LENGTH=3000

# Instagram
INSTAGRAM_MAX_LENGTH=2200
INSTAGRAM_MAX_HASHTAGS=30

# Blog
BLOG_MIN_WORDS=500
BLOG_MAX_WORDS=2000


# CACHING SETTINGS


# Enable caching for research results
ENABLE_CACHE=True

# Cache expiration time (in seconds)
# 3600 = 1 hour, 86400 = 1 day
CACHE_EXPIRATION=3600

# Cache directory
CACHE_DIR=.cache/

# LOGGING SETTINGS

# Log level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=contentflow.log

# Log rotation (max file size in MB)
LOG_MAX_SIZE=10

# Number of log backup files
LOG_BACKUP_COUNT=5

# SECURITY SETTINGS

# Enable HTTPS (for production)
ENABLE_HTTPS=False

# CORS allowed origins (comma-separated)
# Use * for all origins (not recommended for production)
CORS_ORIGINS=*

# FEATURE FLAGS

# Enable/disable specific features
ENABLE_ARXIV_SEARCH=True
ENABLE_WEB_SEARCH=True
ENABLE_YOUTUBE_SEARCH=True
ENABLE_IMAGE_GENERATION=True
ENABLE_ANALYTICS=True
ENABLE_EXPORT=True

# EXPERIMENTAL FEATURES

# Enable AI-powered A/B testing suggestions
ENABLE_AB_TESTING=False

# Enable automatic posting (requires platform API keys)
ENABLE_AUTO_POSTING=False

# Enable real-time collaboration
ENABLE_COLLABORATION=False
